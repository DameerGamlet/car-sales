@page
@model CarCatalogModel
@{
    var carBrands = ViewData["carBrands"] as List<CarBrand>;

    if (carBrands == null)
    {
        carBrands = new List<CarBrand>();
    }
}

<h1 class="card">
    <a href="/Car" style="display: block; margin-bottom: 20px; text-align: center; font-weight: bold;">Все машины</a>
</h1>

<div class="brand-container">
    @foreach (var brand in carBrands)
    {
        <div class="brand-card">
            <img src="~/img/car-brands/@(brand.Name).png" alt="Brand Icon" class="brand-icon">
            <div class="brand-info">
                <div class="brand-name">@brand.Name</div>
                <div class="brand-country">@brand.Country</div>
            </div>
        </div>
    }
</div>